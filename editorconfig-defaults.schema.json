{
  "$id": "http://json-schema.org/editorconfig-defaults",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "EditorConfig Defaults",
  "type": "object",
  "definitions": {
    "matchesObject": {
        "properties": {
          "match": {
            "description": "The regular expression to match",
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "flavors": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/flavorsObject"
            }
          }
        },
        "required": [
          "match",
          "description",
          "flavors"
        ]
    },
    "flavorsObject": {
      "properties": {
        "flavor": {
          "description": "The name of the flavor",
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "comment": {
          "type": "string"
        },
        "reference": {
          "description": "The URL where the flavor is described",
          "type": "string"
        },
        "editorconfig": {
          "$ref": "#/definitions/editorConfigObject"
        }
      },
      "required": [
        "flavor",
        "editorconfig"
      ]
    },
    "editorConfigObject": {
      "properties": {
        "end_of_line": {
          "description": "",
          "type": "string",
          "enum": [ "cr", "lf", "crlf" ]
        },
        "indent_size": {
          "description": "",
          "type": "integer",
          "minimum": 1
        },
        "tab_width": {
          "description": "",
          "type": "integer",
          "minimum": 1
        },
        "indent_style": {
          "description": "",
          "type": "string",
          "enum": [ "space", "tab" ]
        },
        "trim_trailing_spaces": {
          "description": "",
          "type": "boolean"
        },
        "insert_final_newline": {
          "description": "",
          "type": "boolean"
        },
        "charset": {
          "description": "",
          "type": "string",
          "enum": [ "latin1", "utf-8", "utf-8-bom", "utf-16be", "utf-16le" ]
        },
        "max_line_length": {
          "description": "",
          "type": "integer"
        }
      },
      "required": []
    }
  },
  "properties": {
    "version": {
      "type": "string"
    },
    "schema_version": {
      "type": "string"
    },
    "matches": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/matchesObject"
      }
    }
  },
  "required": [
    "schema_version",
    "version",
    "matches"
  ]
}
